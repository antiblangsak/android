<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/gray_light"
            android:id="@+id/relativeLayout">

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:id="@+id/relativeLayout2">



            <LinearLayout
                android:padding="@dimen/padding_lg"
                android:id="@+id/rowDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_serviceitem">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:src="@drawable/ic_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingRight="@dimen/margin_sm"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/dpk_deskripsi_title"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="@dimen/margin_xxl"
                        android:id="@+id/tvEmail2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dpk_deskripsi_short"/>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/padding_lg"
                android:id="@+id/rowNasabah"
                android:layout_below="@+id/rowDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_serviceitem">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:src="@drawable/ic_nasabah"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingRight="@dimen/margin_sm"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="@string/dpk_nasabah_title"/>

                    <TextView
                        android:layout_marginTop="@dimen/margin_xxl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dpk_nasabah_short"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowBayar"
                android:padding="@dimen/padding_lg"
                android:layout_below="@+id/rowNasabah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_serviceitem">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/relativeLayout2"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1">

                    <ImageView
                        android:src="@drawable/ic_bayar"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingRight="@dimen/margin_sm"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="@string/dpk_bayar_title"/>

                    <TextView
                        android:layout_marginTop="@dimen/margin_xxl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dpk_bayar_short"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowKlaim"
                android:padding="@dimen/padding_lg"
                android:layout_below="@+id/rowBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_serviceitem">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/relativeLayout2"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1">

                    <ImageView
                        android:src="@drawable/ic_klaim"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingRight="@dimen/margin_sm"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="@string/dpk_klaim_title"/>

                    <TextView
                        android:layout_marginTop="@dimen/margin_xxl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dpk_klaim_short"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowHistory"
                android:padding="@dimen/padding_lg"
                android:layout_below="@+id/rowKlaim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_serviceitem">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/relativeLayout2"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1">

                    <ImageView
                        android:src="@drawable/ic_history"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingRight="@dimen/margin_sm"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="@string/dpk_history_title"/>

                    <TextView
                        android:layout_marginTop="@dimen/margin_xxl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dpk_history_short"/>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
