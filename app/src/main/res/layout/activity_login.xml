<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_main_dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                />

            <ImageView
                android:src="@drawable/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="4"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxxl"
                android:layout_marginRight="@dimen/margin_xxxl"
                android:layout_marginBottom="@dimen/margin_md"
                android:textColorHint="@color/color_main_light_gray">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/color_main_white"
                    android:textSize="@dimen/input_text_size"
                    android:backgroundTint="@color/color_main_yellow"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxxl"
                android:layout_marginRight="@dimen/margin_xxxl"
                android:layout_marginBottom="@dimen/margin_md"
                android:textColorHint="@color/color_main_light_gray"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/color_main_white">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password"
                    android:textColor="@color/color_main_white"
                    android:textSize="@dimen/input_text_size"
                    android:backgroundTint="@color/color_main_yellow"/>
            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/pbLogin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin_xxl"
                android:indeterminateTint="@color/color_main_yellow"
                android:indeterminate="true" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xl"
                android:layout_marginLeft="@dimen/margin_xxxl"
                android:layout_marginRight="@dimen/margin_xxxl"
                android:text="@string/btn_login_string"
                android:textColor="@color/color_main_black"
                android:backgroundTint="@color/color_main_yellow"
                android:textSize="@dimen/button_font_size"
                android:paddingTop="12dp"
                android:paddingBottom="15dp"/>

            <TextView
                android:id="@+id/tvBelumPunyaAkun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xxxl"
                android:text="@string/link_to_register"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textColor="@color/color_main_white"/>

            <TextView
                android:id="@+id/tvToRegisterPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xs"
                android:text="@string/link_to_register_string"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textColor="@color/color_link_blue"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
