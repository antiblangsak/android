<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_main_dark_gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/margin_xl"
            android:layout_marginLeft="@dimen/margin_xl"
            android:layout_marginRight="@dimen/margin_xl"
            android:textSize="24dp"
            android:textColor="@color/color_main_white"
            android:text="@string/register"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xl"
                android:layout_marginRight="@dimen/margin_xl"
                android:layout_marginBottom="@dimen/margin_md"
                android:textColorHint="@color/color_main_light_gray">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_name"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/color_main_white"
                    android:textSize="@dimen/input_text_size"
                    android:backgroundTint="@color/color_main_yellow"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xl"
                android:layout_marginRight="@dimen/margin_xl"
                android:layout_marginBottom="@dimen/margin_md"
                android:textColorHint="@color/color_main_light_gray">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/color_main_white"
                    android:textSize="@dimen/input_text_size"
                    android:backgroundTint="@color/color_main_yellow"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xl"
                android:layout_marginRight="@dimen/margin_xl"
                android:layout_marginBottom="@dimen/margin_md"
                android:textColorHint="@color/color_main_light_gray"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/color_main_white">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password_register"
                    android:textColor="@color/color_main_white"
                    android:textSize="@dimen/input_text_size"
                    android:backgroundTint="@color/color_main_yellow"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xl"
                android:layout_marginRight="@dimen/margin_xl"
                android:layout_marginBottom="@dimen/margin_md"
                android:textColorHint="@color/color_main_light_gray"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/color_main_white">

                <EditText
                    android:id="@+id/etPasswordConfirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password_confirmation"
                    android:textColor="@color/color_main_white"
                    android:textSize="@dimen/input_text_size"
                    android:backgroundTint="@color/color_main_yellow"/>
            </android.support.design.widget.TextInputLayout>

            <!--<ProgressBar-->
            <!--android:visibility="gone"-->
            <!--android:id="@+id/login_loading"-->
            <!--android:layout_width="64dp"-->
            <!--android:layout_height="64dp"-->
            <!--android:indeterminate="true" />-->

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xl"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/color_main_yellow"
                android:paddingBottom="10dp"
                android:paddingTop="8dp"
                android:text="@string/btn_register_string"
                android:textColor="@color/color_main_black"
                android:textSize="@dimen/button_font_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_xs"
                android:text="@string/link_to_login"
                android:textAlignment="center"
                android:textColor="@color/color_main_white"/>

            <TextView
                android:id="@+id/tvToLoginPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/link_to_login_string"
                android:textAlignment="center"
                android:textColor="@color/color_link_blue"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
