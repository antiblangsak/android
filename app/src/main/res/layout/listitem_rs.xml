<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/padding_lg"
    android:paddingBottom="@dimen/padding_lg"
    android:paddingRight="@dimen/padding_lg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_serviceitem">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm">

        <ImageView
            android:src="@drawable/rumah_sakit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingRight="@dimen/padding_sm"
            android:paddingLeft="@dimen/padding_sm"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_tvNameRS"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Rumah Sakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_ll"/>

        <TextView
            android:id="@+id/list_tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="alamat rumah sakit"
            android:textSize="@dimen/textsize_sm"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/list_tvDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="14 km"
            android:textSize="@dimen/textsize_sm"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>