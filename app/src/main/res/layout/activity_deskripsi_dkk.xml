<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_dark"
        android:padding="10dp"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tvDeskripsiDKK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/deskripsi_dkk"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="10dp"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tvDeskripsiDKK1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/deskripsi_dkk1"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="14dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:id="@+id/relativeLayout2">

            <LinearLayout
                android:padding="@dimen/padding_lg"
                android:id="@+id/rowDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <Button
                        android:id="@+id/btnRS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xl"
                        android:layout_marginLeft="@dimen/margin_xxxl"
                        android:layout_marginRight="@dimen/margin_xxxl"
                        android:paddingBottom="@dimen/padding_xxs"
                        android:text="@string/list_rumah_sakit"
                        android:textColor="@color/black"
                        android:background="@drawable/all_button"
                        android:textSize="@dimen/textsize_button_md" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvSyaratKetentuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_xs"
                    android:text="@string/syarat_dan_ketentuan"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:textColor="@color/blue"/>

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
