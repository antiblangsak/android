<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/padding_lg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_serviceitem">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/list_icon_rs"
            android:src="@drawable/rumah_sakit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingRight="@dimen/margin_sm"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:id="@+id/list_tvNameRS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Rumah Sakit"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="@dimen/margin_xxl"
            android:id="@+id/list_tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="alamat rumah sakit"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/list_tvDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="14 km"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>