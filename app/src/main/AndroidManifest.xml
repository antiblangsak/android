<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antiblangsak.antiblangsak">

    <!-- To auto-complete EMAILmail text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/new_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/new_ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash screen -->
        <activity
            android:name=".common.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- LOGIN AND LOGOUT -->
        <activity
            android:name=".common.LoginActivity"
            android:label="@string/login_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".common.RegisterActivity"
            android:label="@string/register_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".common.MainActivity"
            android:label="@string/main_title"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- DAFTAR NASABAH AND PROFIL -->
        <activity
            android:name=".common.DaftarNasabahActivity"
            android:label="@string/daftarnasabah_title" />
        <activity
            android:name=".common.DaftarNasabahKeluargaTerdaftarActivity"
            android:label="@string/daftarnasabah_title" />
        <activity
            android:name=".common.DaftarNasabahKeluargaBaruActivity"
            android:label="@string/daftarnasabah_title" />
        <activity android:name=".common.DaftarRekeningActivity" />
        <activity
            android:name=".common.DaftarNasabahUploadFotoActivity"
            android:label="@string/daftarnasabah_title" />
        <activity
            android:name=".common.FullScreenImageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".common.ProfileActivity"
            android:label="@string/profile_title" />
        <activity android:name=".common.ProfilKeluargaActivity" />

        <!-- COMMON ACTIVITIES -->
        <activity
            android:name=".common.HistoryActivity"
            android:label="Riwayat" />
        <activity
            android:name=".common.HistoryPaymentActivity"
            android:label="Detail Pembayaran" />
        <activity
            android:name=".common.HistoryClaimActivity"
            android:label="Detail Klaim" />
        <activity
            android:name=".common.NasabahActivity"
            android:label="@string/dkk_nasabah_daftarkan" />
        <activity
            android:name=".common.NasabahAddActivity"
            android:label="@string/dkk_nasabah_daftarkan" />
        <activity
            android:name=".common.ClaimActivity"
            android:label="Klaim Dana"/>

        <!-- DPGK -->
        <activity
            android:name=".dpgk.DPGKActivity"
            android:label="Dana Pendidikan Kami" />
        <activity
            android:name=".dpgk.DPGKDescriptionActivity"
            android:label="@string/title_activity_deskripsi" />
        <activity
            android:name=".dpgk.DPGKTermsConditionsActivity"
            android:label="Syarat dan Ketentuan" />

        <!-- DKK -->
        <activity
            android:name=".dkk.DKKActivity"
            android:label="Dana Kesehatan Kami" />
        <activity
            android:name=".dkk.DKKTermsConditionsActivity"
            android:label="Syarat dan Ketentuan" />
        <activity
            android:name=".dkk.DKKDescriptionActivity"
            android:label="@string/title_activity_deskripsi" />
        <activity
            android:name=".dkk.DKKListRumahSakitActivity"
            android:label="Daftar RS Mitra" />

        <!-- DWK -->
        <activity
            android:name=".dwk.DWKActivity"
            android:label="Dana Warisan Kami" />
        <activity
            android:name=".dwk.DWKDescriptionActivity"
            android:label="@string/title_activity_deskripsi" />
        <activity
            android:name=".dwk.DWKTermsConditionsActivity"
            android:label="Syarat dan Ketentuan" />

    </application>

</manifest>